extends layout

block content
  h2 Welcome to #{title}
  div.container
    form.form-horizontal(method='POST')
      div.form-group
        label(for="name").col-sm-3.col-form-label Name
        div.col-sm-10
          input(type="text" name="name" placeholder="Type your name").form-control#name
      div.form-group
        label(for="age").col-sm-3.col-form-label Age
        div.col-sm-10
          input(type="number" name="age" placeholder="Type your age").form-control#age
      div.form-group
        label(for="email").col-sm-3.col-form-label Email
        div.col-sm-10
          input(type="email" name="email" placeholder="Email").form-control#email
      div.form-group
        label(for="blog").col-sm-3.col-form-label Comment
        div.col-sm-10
          textarea(name="blog" placeholder="Leave your comment").form-control#blog
      div.form-group
        .col-sm-offset-3.col-sm-7
          button.btn.btn-success(type='submit')
            | Post

